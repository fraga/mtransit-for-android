<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <include
            android:id="@+id/ad_layout"
            layout="@layout/layout_ad" />
        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/ad_layout"
            android:visibility="gone" />
        <ViewStub
            android:id="@+id/content_frame_loading_stub"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inflatedId="@+id/content_frame_loading"
            android:layout="@layout/layout_loading_large"
            android:visibility="visible" />
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/ad_layout"
            android:layout_alignWithParentIfMissing="true"
            layout="@layout/layout_shadow_revert" />
    </RelativeLayout>
    <include
        android:id="@+id/left_drawer"
        android:layout_width="@dimen/drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        layout="@layout/layout_left_drawer" />
</android.support.v4.widget.DrawerLayout>